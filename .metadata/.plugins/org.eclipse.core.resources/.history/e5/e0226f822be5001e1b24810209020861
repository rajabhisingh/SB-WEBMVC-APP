package com.abhi.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.servlet.ModelAndView;

import com.abhi.entity.Product;
import com.abhi.service.ProductService;

@Controller
public class ProductController {
	@GetMapping("/product")
	public ModelAndView loadPrduct() {
		ModelAndView mav = new ModelAndView();
		mav.addObject("productobj", new Product());
		mav.setViewName("index");
	    return mav;
	}
	@PostMapping("/product")
	public ModelAndView handleProductSubmit(Product product) {
	   ModelAndView mav = new ModelAndView();
	   mav.addObject("msg", "Successfully Submitted");
	   mav.setViewName("data");
		
		return mav;
	}

}
